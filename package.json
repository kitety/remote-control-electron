{
  "name": "remote-control-electron",
  "version": "1.0.0",
  "main": "app/main/index.js",
  "license": "MIT",
  "dependencies": {
    "electron": "^18.0.3",
    "electron-is-dev": "^2.0.0"
  },
  "scripts": {
    "start:main": "electron .",
    "start:render": "cd app/renderer/src/main && yarn start",
